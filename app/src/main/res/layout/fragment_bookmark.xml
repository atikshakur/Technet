<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bookmark_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:elevation="4dp"
        app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        app:titleTextColor="@color/purple_text" />

    <ListView
        android:id="@+id/bookmark_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bookmark_toolbar"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="8dp"
        android:scrollbars="none" />

</RelativeLayout>