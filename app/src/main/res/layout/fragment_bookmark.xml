<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:id="@+id/bookmark_toolbar"
        android:elevation="4dp"
        app:titleTextColor="@color/purple_text"
        app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        />
    <ListView
        android:id="@+id/bookmark_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bookmark_toolbar"
        >

    </ListView>


</RelativeLayout>