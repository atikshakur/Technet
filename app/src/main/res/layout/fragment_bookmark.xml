<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bookmark_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:elevation="4dp"
        app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        app:titleTextColor="@color/purple_text" />

    <ListView
        android:id="@+id/bookmark_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bookmark_toolbar"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="8dp"
        android:scrollbars="none" />
    <TextView
        android:id="@+id/no_bookmark_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_bk_txt"
        android:textSize="22sp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:gravity="center"
        android:layout_margin="14dp"
        android:fontFamily="@font/american_typewriter"

        />

</RelativeLayout>